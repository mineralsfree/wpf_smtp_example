<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
          Title="ImageControlCodeBehindSample" Height="1080" Width="1920">
    <StackPanel>
        <WrapPanel HorizontalAlignment="Center">
            <Button Name="btnLoadFromFile" Click="captureButton_Click">Start</Button>
            <Button  Click="recordButton_Click" Name="RecordButton">Start Recording Video</Button>
            <Button  Click="photo" Name="Photo">Photo</Button>
        </WrapPanel>
        <Image Name="captureImageBox" Width="1920"  Height="1080" />
    </StackPanel>
</Window>
